{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": "off",
    "no-console": "off",
    "no-undef": "off"
  },
  "ignorePatterns": ["dist", "node_modules", "build", ".next", "**/*.tsx", "**/*.ts", "**/*.jsx"]
}
